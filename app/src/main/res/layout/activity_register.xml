<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khaki"
    android:fontFamily="@font/nunito">

    <ImageView
        android:id="@+id/logo_intro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_healthybudy_hijau"/>

    <TextView
        android:id="@+id/nama_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Healthy Budy"
        android:textAlignment="center"
        android:textColor="@color/black_mild"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logo_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_intro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf   ="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_intro"
        android:layout_marginTop="62dp"
        android:layout_marginHorizontal="32sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textAlignment="center"
            android:textColor="@color/black_mild"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="62dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/username_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="fill your Username"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="fill you Email"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="fill Password"
            android:inputType="textPassword"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="12dp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="repeat your Password"
            android:inputType="textPassword"
            android:textSize="18dp"/>

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sign"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cornerRadius="30dp"
        android:text="SignUp"
        android:textSize="24sp"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginHorizontal="24dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/green_calm"
        />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Already have an account? "
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />

    <TextView
        android:id="@+id/login_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/green_calm"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/already"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />




</androidx.constraintlayout.widget.ConstraintLayout>