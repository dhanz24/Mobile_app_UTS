<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/khaki"
    tools:context=".Tools">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_kalkulator"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:text="Kalkulator"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black_mild"
                android:drawableLeft="@drawable/icon_profile"
                android:drawableRight="@drawable/icon_next"/>
            <Button
                android:id="@+id/button_bmi"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:text="Kalkulator bmi"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black_mild"
                android:drawableLeft="@drawable/icon_profile"
                android:drawableRight="@drawable/icon_next"
                />
            <Button
                android:id="@+id/button_KonversiUang"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:text="Konversi Uang"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black_mild"
                android:drawableLeft="@drawable/icon_profile"
                android:drawableRight="@drawable/icon_next"/>
            <Button
                android:id="@+id/button_KonversiSuhu"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:text="Konversi suhu"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black_mild"
                android:drawableLeft="@drawable/icon_profile"
                android:drawableRight="@drawable/icon_next"/>
            <Button
                android:id="@+id/button_buoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black_mild"
                android:drawableLeft="@drawable/icon_profile"
                android:drawableRight="@drawable/icon_next"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>